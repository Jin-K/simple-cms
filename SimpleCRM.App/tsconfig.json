{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "skipLibCheck": true,
    // vaut mieux ne pas les activer depuis utilisation de @fuse
    //"noImplicitAny": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "paths": {
      "@fuse": [
        "@fuse/"
      ]
    },
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules",
    "**/main-aot.webpack.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
